{
  "compilerOptions": {
    "outDir": "./Scripts/compiledJS",
    "sourceMap": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "compileOnSave": true,
  "include": [
    "./Scripts/**/*"
  ],
  "exclude": [
	"node_modules",
	"**/*.spec.ts"
	]
}